{% extends "admin.html.twig" %}
{% block body %}
  <!-- Body: Body -->
        <!-- Body: Body -->
        <div class="body d-flex py-lg-3 py-md-2">
            <div class="container-xxl">
                <div class="row clearfix">
                    <div class="col-md-12">
                        <div class="card border-0 mb-4 no-bg">
                            <div class="card-header py-3 px-0 d-flex align-items-center  justify-content-between border-bottom">
                                <h3 class=" fw-bold flex-fill mb-0">Our Formations</h3>
                                <div class="col-auto d-flex">
                                   
                                    <li><a class="btn btn-dark ms-1 "class="icofont-plus-circle me-2 fs-6" href="ajoutforma"> <span>add formation</span></a></li>
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- Row End -->
                <div class="row g-3 row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-2 row-cols-xl-2 row-cols-xxl-2 row-deck py-1 pb-4">
                    {% for i in f %}
                    <div class="col">
                        <div class="card teacher-card">
                            <div class="card-body  d-flex">
                                <div class="profile-av pe-xl-4 pe-md-2 pe-sm-4 pe-4 text-center w220">
                                    <img src=http://localhost/images/{{i.getImage}} alt="" class="avatar xl rounded-circle img-thumbnail shadow-sm">
                                    <div class="about-info d-flex align-items-center mt-1 justify-content-center flex-column">
                                       <h6 class="mb-0 fw-bold d-block fs-6 mt-2">{{i.getNomFormation}}</h6>
                        <!--admin nadia--> 
                        
                        <div class="btn-group mt-2" role="group" aria-label="Basic outlined example">
                                    
                                            <a href="{{ path('suppforma', {'id': i.getId}) }}" class="btn btn-outline-secondary">
                                                <i class="icofont-ui-delete text-danger"></i>
                                            </a>
                                            <a href="{{ path('modifforma', {'id': i.getId}) }}" class="btn btn-outline-secondary">
                                                <i class="icofont-edit text-success"></i>
                                            </a>

                                           
                                        </div>    
                                    </div>
                                </div>
                                <div class="teacher-info border-start ps-xl-4 ps-md-3 ps-sm-4 ps-4 w-100">
                                    <h6  class="mb-0 mt-2  fw-bold d-block fs-6">{{i.getNomFormation}}</h6>
                                    <span class="py-1 fw-bold small-11 mb-0 mt-1 text-muted"> {{ i.getDateDebut|date('Y-m-d') }}  </span>
                                <br>
          
                                    <div class="video-setting-icon mt-3 pt-3 border-top">
                                        <p>{{i.getDescription}}</p>
                                    </div>
                                    <div class="d-flex flex-wrap align-items-center ct-btn-set">
                                        
                                        <a href="{{path('afficheparti',{'id_formation':i.id})}}" class="btn btn-dark btn-sm mt-1"><i class="icofont-invisible me-2 fs-6"></i>participants</a>
                                
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                    
                </div>
            </div>
        </div>


{% endblock %}

